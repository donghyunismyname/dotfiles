{
    // formatOnType
    "editor.formatOnType": false,


    // Cmake
    "cmake.configureOnOpen": true,
    "cmake.options.statusBarVisibility": "visible",
    "cmake.showOptionsMovedNotification": false,


    // Workbench
    "workbench.colorTheme": "Visual Studio Dark - C++",
    "workbench.sideBar.location": "left",
    "workbench.panel.defaultLocation": "right",


    // If the file is already open in the editor, just move focus to it instead of opening a new editor
    "workbench.editor.revealIfOpen": true,


    // Autosave
    "files.autoSave": "afterDelay",


    // Unfocused panes are dimmed
    "accessibility.dimUnfocused.enabled": true,
    "accessibility.dimUnfocused.opacity": 0.8,


    // Editor settings
    "editor.inlineSuggest.enabled": true,
    "editor.cursorSurroundingLines": 10,
    "editor.cursorBlinking": "blink",
    "editor.rulers": [80],
    "editor.minimap.enabled": false,
    "editor.wordWrap": "off",
    "editor.lineNumbers": "relative",
    "editor.smoothScrolling": true,
    "editor.renderWhitespace": "trailing",
    "editor.stickyScroll.enabled": true,
    "editor.fontFamily": "Consolas, 'Courier New', monospace, 'DroidSansM Nerd Font Mono'",


    // Current line highlighted
    "editor.renderLineHighlight": "none",
    "workbench.colorCustomizations": {
        "editor.lineHighlightBackground": "#ffffff10",
        // "editor.lineHighlightBorder": "#00000000",
    },

    
    // Outline made succint (ctrl+shift+O)
    "outline.showVariables": false,


    // Input not directed to terminal
    "terminal.integrated.commandsToSkipShell": [
    //     "workbench.action.navigateUp",
    //     "workbench.action.focusBelowGroup",
    //     "workbench.action.focusLeftGroup",
    //     "workbench.action.focusRightGroup",
    //     "workbench.action.focusActiveEditorGroup",
    //     "workbench.action.focusPanel"
        "workbench.action.createTerminalEditor",
        "workbench.action.toggleEditorWidths",
        "workbench.action.toggleMaximizeEditorGroup",
    ],
    "terminal.integrated.confirmOnKill": "always",


    // ========== Extension for make vscode transparent ==========
    "glassit.alpha": 255,


    // ========== Extension: Path Intellisense ==========
    "typescript.suggest.paths": false,
    "javascript.suggest.paths": false,
    "path-intellisense.absolutePathToWorkspace": false,


    // ==================== VIM ======================
    "vim.easymotion": true,
    "vim.surround": true,
    "vim.sneak": false,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    "vim.replaceWithRegister": false,
    "vim.camelCaseMotion.enable": false,
    "vim.leader": "<space>",
    "vim.hlsearch": false,
    "vim.inccommand": "replace",

    // Highlighted yank
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.duration": 500,
    "vim.highlightedyank.color": "rgba(255, 255, 0, 1)",
    "vim.highlightedyank.textColor": "rgba(0, 0, 0, 1)",

    // ctrl not directed to vim
    "vim.handleKeys": {
        "<C-q>": false, // Open anything
        "<C-w>": false, // close tab
        "<C-e>": false, // explorer
        "<C-t>": false, // Go to symbol in workspace
        "<C-y>": false, // redo

        "<C-a>": false, // select all
        "<C-s>": false, // save
        // "<C-d>": false, // 
        "<C-f>": false, // find
        "<C-g>": false, // search symbol in workspace

        "<C-z>": false, // undo
        "<C-x>": false, // cut
        // "<C-c>": false, // copy
        "<C-v>": false, // paste
        "<C-b>": false, // toggle primary sidebar
        "<C-m>": false, // multiselect

        "<C-h>": false, // left
        "<C-j>": false, // down
        "<C-k>": false, // up
        "<C-l>": false, // right
    },

    // jk to exit insert mode
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        }
    ],

    "vim.normalModeKeyBindings": [
    ],

    "vim.operatorPendingModeKeyBindings": [
        {
            "before": ["L"],
            "after": ["$"]
        },
        {
            "before": ["H"],
            "after": ["^"]
        },
    ],

    "vim.normalModeKeyBindingsNonRecursive": [
        // Language Server Protocol
        // https://dev.to/ansonh/10-vs-code-vim-tricks-to-boost-your-productivity-1b0n#5-lsp-keybindings
        {
            "before": ["g", "p", "d"],
            "commands": ["editor.action.peekDefinition"]
        },
        {
            "before": ["g", "h"],
            "commands": ["editor.action.showDefinitionPreviewHover"]
        },
        {
            "before": ["g", "i"],
            "commands": ["editor.action.goToImplementation"]
        },
        {
            "before": ["g", "p", "i"],
            "commands": ["editor.action.peekImplementation"]
        },
        {
            "before": ["g", "q"],
            "commands": ["editor.action.quickFix"]
        },
        {
            "before": ["g", "r"],
            "commands": ["editor.action.referenceSearch.trigger"]
        },
        {
            "before": ["g", "t"],
            "commands": ["editor.action.goToTypedefinition"]
        },
        {
            "before": ["g", "p", "t"],
            "commands": ["editor.action.peekTypedefinition"]
        },

        // Leader
        {
            "before": ["leader", "o"],
            "commands": ["workbench.action.quickOpen"],
        },
        {
            "before": ["leader", "q"],
            "commands": ["workbench.action.closeActiveEditor"],
        },        
        // {
        //     "before": ["leader", "r"],
        //     "commands": ["vim-search-and-replace.start"],
        // },  
        {
            "before": ["leader", "v"],
            "after": ["V", "leader", "leader", "leader", "b", "d", "j", "k"],
        },  

        // Move to next/previous occurrence of the current symbol
        {
            "before": [","],
            "after": ["#"],
        },
        {
            "before": ["."],
            "after": ["*"],
        },


        // ========== both normal & visual ==========
        // HJKL
        {
            "before": ["H"],
            "after": ["^"],
        },
        {
            "before": ["L"],
            "after": ["$"],
        },
        {
            "before": ["J"],
            "after": ["j", "j", "j", "j", "j", ],
        },
        {
            "before": ["K"],
            "after": ["k", "k", "k", "k", "k", ],
        },

        // indent
        {
            "before": ["<"],
            "commands": [
                "editor.action.outdentLines"
            ],
        },
        {
            "before": [">"],
            "commands": [
                "editor.action.indentLines"
            ],
        },

        // Yank & Paste
        {
            "before": ["y"],
            "after": ["\"", "*", "y"],
        },
        {
            "before": ["Y"],
            "after": ["\"", "*", "y", "$"],
        },
        {
            "before": ["p"],
            "after": ["\"", "*", "p"],
        },
        {
            "before": ["P"],
            "after": ["\"", "*", "P"],
        },

        // vim.easymotion
        // {
        //     "before": ["/"],
        //     "after": ["leader", "leader", "/"],
        // },
        {
            "before": ["s"],
            "after": ["leader", "leader", "2", "s"],
        },
        {
            "before": ["S"],
            "after": ["leader", "leader", "/"],
        },
        {
            "before": ["t"],
            "after": ["leader", "leader", "t"],
        },
        {
            "before": ["T"],
            "after": ["leader", "leader", "T"],
        },
        {
            "before": ["f"],
            "after": ["leader", "leader", "f"],
        },
        {
            "before": ["F"],
            "after": ["leader", "leader", "F"],
        },
    ],

    "vim.visualModeKeyBindingsNonRecursive": [
        // Easy replace
        {
            "before": ["r"],
            "after": [":", "s", "/"]
        },

        // vv instead of V
        {
            "before": ["v"],
            "after": ["V"],
        },


        // ========== both normal & visual ==========
        // HJKL
        {
            "before": ["H"],
            "after": ["^"],
        },
        {
            "before": ["L"],
            "after": ["$"],
        },
        {
            "before": ["J"],
            "after": ["j", "j", "j", "j", "j", ],
        },
        {
            "before": ["K"],
            "after": ["k", "k", "k", "k", "k", ],
        },

        // Indent
        {
            "before": ["<"],
            "commands": [
                "editor.action.outdentLines"
            ],
        },
        {
            "before": [">"],
            "commands": [
                "editor.action.indentLines"
            ],
        },

        // Yank & Paste
        {
            "before": ["y"],
            "after": ["\"","*","y","g","v"],
        },
        {
            "before": ["Y"],
            "after": ["\"","*","y","g","v"],
        },
        {
            "before": ["p"],
            "after": ["\"","*","p","g","v","\"","*","y"],
        },
        {
            "before": ["P"],
            "after": ["\"","*","p","g","v","\"","*","y"],
        },

        // vim.easymotion
        // {
        //     "before": ["/"],
        //     "after": ["leader", "leader", "/"],
        // },
        {
            "before": ["s"],
            "after": ["leader", "leader", "2", "s"],
        },
        {
            "before": ["S"],
            "after": ["leader", "leader", "/"],
        },
        {
            "before": ["t"],
            "after": ["leader", "leader", "t"],
        },
        {
            "before": ["T"],
            "after": ["leader", "leader", "T"],
        },
        {
            "before": ["f"],
            "after": ["leader", "leader", "f"],
        },
        {
            "before": ["F"],
            "after": ["leader", "leader", "F"],
        },
    ],

    "remote.SSH.remotePlatform": {
    },
}
