{
    "window.confirmBeforeClose": "always",
    "window.openFoldersInNewWindow": "on",
    "files.hotExit": "onExitAndWindowClose",

    // Sync across different platforms (Windows, Linux, MacOS)
    "settingsSync.keybindingsPerPlatform": false,

    // Disable accepting suggestions
    "editor.acceptSuggestionOnEnter": "smart",

    // Cmake
    "cmake.configureOnOpen": false,
    "cmake.configureOnEdit": false,
    "cmake.options.statusBarVisibility": "visible",
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],

    // Formatting
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "editor.formatOnPaste": true,

    // Workbench
    "workbench.editor.revealIfOpen": true,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.limit.value": 4,
    
    // Autosave
    "files.autoSave": "onFocusChange",
    
    // Unfocused panes are dimmed
    "accessibility.dimUnfocused.enabled": true,
    "accessibility.dimUnfocused.opacity": 0.9,
    
    // Editor options
    "editor.inlineSuggest.enabled": true,
    "editor.cursorSurroundingLines": 10,
    "editor.cursorBlinking": "blink",
    "editor.rulers": [80, 120],
    "editor.minimap.enabled": false,
    "editor.wordWrap": "on",
    "editor.lineNumbers": "on",
    "editor.smoothScrolling": false,
    "editor.renderWhitespace": "trailing",

    // Font
    // "editor.fontFamily": "Consolas, 'Courier New', monospace, 'DroidSansM Nerd Font Mono'",
    // "editor.fontFamily": "Consolas, 'Courier New', monospace",

    // Highlight color
    "editor.renderLineHighlight": "all",
    "workbench.colorCustomizations": {
        "editor.lineHighlightBackground": "#ffffff10",
        "editor.lineHighlightBorder": "#ffffff00",
        "editor.wordHighlightBackground": "#ffffff20",
        "editor.selectionBackground": "#ff0000c0",
        "editor.selectionHighlightBackground": "#ff000040",
        "editor.findMatchBackground": "#00ff00c0",
        "editor.findMatchHighlightBackground": "#00ff0040",
    },

    
    // Outline made succint (ctrl+shift+O)
    "outline.showVariables": false,
    
    // Breadcumbs
    "breadcrumbs.showVariables": false,
    "breadcrumbs.showConstants": false,

    // Git diff show added/removed whitespaces
    "diffEditor.ignoreTrimWhitespace": false,


    
    // ========== Terminal Settings ==========
    // Input not directed to terminal
    "terminal.integrated.commandsToSkipShell": [
    //     "workbench.action.navigateUp",
        "workbench.action.createTerminalEditor",
        "workbench.action.toggleEditorWidths",
        "workbench.action.toggleMaximizeEditorGroup",
        "-workbench.action.quickOpen",
    ],
    "terminal.integrated.confirmOnKill": "always",
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    // "terminal.integrated.stickyScroll.enabled": true,
    "terminal.integrated.profiles.linux": {
        "zsh (login)": {
            "path": "zsh",
            "args": [
                "-l"
            ],
        },
    },
    "terminal.integrated.profiles.osx": {
        "zsh (login)": {
            "path": "zsh",
            "args": [
                "-l"
            ],
        },
    },
    
    // Custom environment variables
    "terminal.integrated.env.linux": {},

    // Terminal tab title/description
    "terminal.integrated.tabs.title": "${cwdFolder}",
    "terminal.integrated.tabs.description": "",

    // Terminal font
    "terminal.integrated.fontFamily": "DroidSansM Nerd Font Mono",




    // ========== Extension: Path Intellisense ==========
    "typescript.suggest.paths": false,
    "javascript.suggest.paths": false,


    // ==================== VIM ======================
    "vim.useSystemClipboard": true,
    "vim.easymotion": true,
    "vim.surround": true,
    "vim.sneak": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    "vim.replaceWithRegister": false,
    "vim.camelCaseMotion.enable": false,
    "vim.leader": "<space>",
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.inccommand": "replace",
    "vim.gdefault": true,

    // Highlighted yank
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.duration": 1000,
    "vim.highlightedyank.color": "rgba(255, 255, 0, 1)",
    "vim.highlightedyank.textColor": "rgba(0, 0, 0, 1)",

    // ctrl not directed to vim
    "vim.handleKeys": {
        "<C-q>": false, // Open anything
        "<C-w>": false, // close tab
        "<C-e>": false, // explorer
        "<C-t>": false, // Go to symbol in workspace
        "<C-y>": false, // redo

        "<C-a>": false, // select all
        "<C-s>": false, // save
        // "<C-d>": false, // vim: page down
        "<C-f>": false, // find
        "<C-g>": false, // search symbol in workspace

        "<C-z>": false, // undo
        "<C-x>": false, // cut
        "<C-c>": false, // copy
        "<C-v>": false, // paste
        "<C-b>": false, // toggle primary sidebar
        "<C-m>": false, // multiselect

        "<C-h>": false, // left
        "<C-j>": false, // down
        "<C-k>": false, // up
        "<C-l>": false, // right

        "<C-p>": false, // quick open
    },

    "vim.insertModeKeyBindingsNonRecursive": [
        // jk to exit insert mode
        {
            "before": ["j", "k"],
            "after": ["esc", "l"]
        },

        // jh
        {
            "before": ["j", "h"],
            "commands": ["cursorHome"],
        },

        // jl
        {
            "before": ["j", "l"],
            "commands": ["cursorEnd"],
        },
    ],

    "vim.operatorPendingModeKeyBindings": [
        // home/end
        {
            "before": ["leader", "h"],
            "after": ["^"],
        },        
        {
            "before": ["leader", "l"],
            "after": ["$"],
        },

        // Prevent mistype cie (change in entirety) for ciw (change in word)
        {
            "before": ["i", "e"],
            "after": ["i", "w"]
        }
    ],

    "vim.normalModeKeyBindings": [],
    "vim.normalModeKeyBindingsNonRecursive": [
        // Language Server Protocol
        // https://dev.to/ansonh/10-vs-code-vim-tricks-to-boost-your-productivity-1b0n#5-lsp-keybindings
        {
            "before": ["g", "p", "d"],
            "commands": ["editor.action.peekDefinition"]
        },
        {
            "before": ["g", "h"],
            "commands": ["editor.action.showDefinitionPreviewHover"]
        },
        {
            "before": ["g", "i"],
            "commands": ["editor.action.goToImplementation"]
        },
        {
            "before": ["g", "p", "i"],
            "commands": ["editor.action.peekImplementation"]
        },
        {
            "before": ["g", "q"],
            "commands": ["editor.action.quickFix"]
        },
        {
            "before": ["g", "r"],
            "commands": ["editor.action.referenceSearch.trigger"]
        },
        {
            "before": ["g", "t"],
            "commands": ["editor.action.goToTypedefinition"]
        },
        {
            "before": ["g", "p", "t"],
            "commands": ["editor.action.peekTypedefinition"]
        },

        // Leader
        {
            "before": ["leader", "w"],
            "after": [":", "w", "enter"],
        },
        {
            "before": ["leader", "o"],
            "commands": ["workbench.action.quickOpen"],
        },
        {
            "before": ["leader", "q"],
            "commands": ["workbench.action.closeActiveEditor"],
        },        

        // sft
        // vim.easymotion
        {
            "before": ["S"],
            "after": ["leader", "leader", "2", "s"],
        },
        {
            "before": ["s"],
            "commands": ["findThenJump.initiate"],
        },
        {
            "before": ["t"],
            "after": ["leader", "leader", "t"],
        },
        {
            "before": ["T"],
            "after": ["leader", "leader", "T"],
        },
        {
            "before": ["f"],
            "after": ["leader", "leader", "f"],
        },
        {
            "before": ["F"],
            "after": ["leader", "leader", "F"],
        },

        // Normal mode dd uses register a
        {
            "before": ["d", "d"],
            "after": ["\"", "a", "d", "d"],
        },

        // Increase/decrease number
        {
            "before": ["-"],
            "after": ["ctrl+x"]
        },
        {
            "before": ["="],
            "after": ["ctrl+a"]
        },

        // Cursor move word wrap (do not preserve column position)
        // {
        //     "before": ["j"],
        //     "after": ["g", "u"]
        // },
        // {
        //     "before": ["k"],
        //     "after": ["g", "k"]
        // },
        
        // x does not taint register
        {
            "before": ["x"],
            "after": ["\"", "_", "x"]
        },

        // ========== same normal & visual ==========
        // indent
        // {
        //     "before": ["shift+tab"],
        //     "commands": ["editor.action.outdentLines"],
        // },
        // {
        //     "before": ["tab"],
        //     "commands": ["editor.action.indentLines"],
        // },
        // indent
        {
            "before": ["["],
            "commands": ["editor.action.outdentLines"],
        },
        {
            "before": ["]"],
            "commands": ["editor.action.indentLines"],
        },
        // Up/Down fast
        {
            "before": [";"],
            "after": ["9", "k"],
        },
        {
            "before": ["m"],
            "after": ["9", "j"],
        },
        {
            "before": ["leader", "k"],
            "after": ["m", "`", "4", "0", "k"],
        },
        {
            "before": ["leader", "j"],
            "after": ["m", "`", "4", "0", "j"],
        },
        {
            "before": ["H"],
            "after": ["^"],
        },        
        {
            "before": ["J"],
            "after": ["5", "j"],
        },
        {
            "before": ["K"],
            "after": ["5", "k"],
        },
        {
            "before": ["L"],
            "after": ["$"],
        },
        // home/end
        {
            "before": ["leader", "h"],
            "after": ["^"],
        },        
        {
            "before": ["leader", "l"],
            "after": ["$"],
        },

        // ========== combined normal & visual ==========
        // Current word search
        {
            "before": ["'"],
            "after": ["*", "N"],
        },
        {
            "before": [","],
            "after": ["N"],
        },
        {
            "before": ["."],
            "after": ["n"],
        },
   ],

    "vim.visualModeKeyBindingsNonRecursive": [
        // Easy replace
        {
            "before": ["r"],
            "after": [":", "s", "/"]
        }, 
        
        // Prevent mistype cie (change in entirety) for ciw (change in word)
        {
            "before": [
                "i",
                "e"
            ],
            "after": [
                "i",
                "w"
            ]
        },

        // vv instead of V
        {
            "before": ["v"],
            "after": ["V"],
        },

        // Exit visual mode
        {
            "before": ["enter"],
            "after": ["esc"],
        },

        // Easy surround
        {
            "before": [")"],
            "after": ["S", ")"],
        },
        {
            "before": ["("],
            "after": ["S", "("],
        },
        {
            "before": ["]"],
            "after": ["S", "]"],
        },
        {
            "before": ["["],
            "after": ["S", "["],
        },
        {
            "before": ["}"],
            "after": ["S", "}"],
        },
        {
            "before": ["{"],
            "after": ["S", "{"],
        },
        {
            "before": [">"],
            "after": ["S", ">"],
        },
        {
            "before": ["<"], // Tag
            "after": ["S", "<"],
        },
        {
            "before": ["\""],
            "after": ["S", "\""],
        },
        {
            "before": ["'"],
            "after": ["S", "'"],
        },

        // Yank & Paste
        {
            "before": ["y"],
            "after": ["y","g","v","esc",],
        },
        {
            "before": ["Y"],
            "after": ["y","g","v","esc",],
        },
        {
            "before": ["p"],
            "after": ["p","g","v","y"],
        },
        {
            "before": ["P"],
            "after": ["p","g","v","y"],
        },

        // ========== same normal & visual ==========
        // Indent
        // {
        //     "before": ["shift+tab"],
        //     "commands": ["editor.action.outdentLines"],
        // },
        // {
        //     "before": ["tab"],
        //     "commands": ["editor.action.indentLines"],
        // },
        // indent
        {
            "before": ["["],
            "commands": ["editor.action.outdentLines"],
        },
        {
            "before": ["]"],
            "commands": ["editor.action.indentLines"],
        },
        // Up/Down fast
        {
            "before": [";"],
            "after": ["9", "k"],
        },
        {
            "before": ["m"],
            "after": ["9", "j"],
        },
        {
            "before": ["leader", "k"],
            "after": ["m", "`", "4", "0", "k"],
        },
        {
            "before": ["leader", "j"],
            "after": ["m", "`", "4", "0", "j"],
        },
        {
            "before": ["H"],
            "after": ["^"],
        },        
        {
            "before": ["J"],
            "after": ["5", "j"],
        },
        {
            "before": ["K"],
            "after": ["5", "k"],
        },
        {
            "before": ["L"],
            "after": ["$"],
        },
        // home/end
        {
            "before": ["leader", "h"],
            "after": ["^"],
        },        
        {
            "before": ["leader", "l"],
            "after": ["$"],
        },

        // ========== combined normal & visual ==========
        // Current word search
        {
            "before": ["'"],
            "after": ["\"", "a", "y", "/", "<c-r>", "a", "enter", "N",],
        },
        {
            "before": [","],
            "after": ["N"],
        },
        {
            "before": ["."],
            "after": ["n"],
        },
    ],
}
