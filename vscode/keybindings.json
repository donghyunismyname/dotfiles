    {
        "key": "alt+a",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.files.action.showActiveFileInExplorer",
                "list.focusUp",
                "list.selectAndPreserveFocus",
            ]
        }
      },
      {
        "key": "alt+d",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.files.action.showActiveFileInExplorer",
                "list.focusDown",
                "list.selectAndPreserveFocus",
            ]
        }
      }, 
]
