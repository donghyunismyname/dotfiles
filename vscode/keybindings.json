// Place your key bindings in this file to override the default
[
    // Multiple Cursors Find Next Match
    {
        "key": "ctrl+m",
        "command": "editor.action.addSelectionToNextFindMatch",
        "when": "editorFocus"
    },


    // ctrl+enter to switch focus
    // {
    //     "key": "ctrl+enter",
    //     "command": "workbench.action.focusActiveEditorGroup",
    //     "when": "inOutput || !editorFocus"
    // },
    // {
    //     "key": "ctrl+enter",
    //     "command": "workbench.action.focusPanel",
    //     "when": "!focusedView && !panelFocus"
    // },


    // Navigate Left Down Up Right
    {
        "key": "ctrl+h",
        "command": "workbench.action.navigateLeft",
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.navigateDown",
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.navigateUp",
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.navigateRight",
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.nextSideBarView",
        "when": "sideBarFocus",
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.previousSideBarView",
        "when": "sideBarFocus",
    },

    // Panel Navigation
    {
        "key": "ctrl+,",
        "command": "workbench.action.previousPanelView",
        "when": "panelFocus"
    },
    {
        "key": "ctrl+.",
        "command": "workbench.action.nextPanelView",
        "when": "panelFocus"
    },
    {
        "key": "ctrl+k",
        "when": "panelFocus",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.action.terminal.focusTabs",
                "list.focusUp",
                "list.select"
            ]
        },
    },
    {
        "key": "ctrl+j",
        "when": "panelFocus",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.action.terminal.focusTabs",
                "list.focusDown",
                "list.select"
            ]
        },
    },

    // Panel Terminal Split
    {
        "key": "ctrl+shift+j",
        "when": "panelFocus",
        "command": "workbench.action.terminal.split",
    },
    {
        "key": "ctrl+shift+l",
        "when": "panelFocus",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.action.terminal.unsplit",
                "workbench.action.terminal.focusTabs",
                "list.focusDown",
                "list.select"
            ],
        },
    },


    // Move between tabs
    {
        "key": "ctrl+oem_period",
        "command": "workbench.action.nextEditorInGroup",
        "when": "!sideBarFocus && !panelFocus",
    },
    {
        "key": "ctrl+oem_comma",
        "command": "workbench.action.previousEditorInGroup",
        "when": "!sideBarFocus && !panelFocus",
    },
    {
        "key": "ctrl+oem_comma",
        "command": "-workbench.action.openSettings"
    },


    // Split Editor
    {
        "key": "ctrl+shift+h",
        "command": "workbench.action.splitEditorLeft",
        "when": "editorFocus",
    },
    {
        "key": "ctrl+shift+k",
        "command": "workbench.action.splitEditorUp",
        "when": "editorFocus",
    },
    {
        "key": "ctrl+shift+l",
        "command": "workbench.action.splitEditorRight",
        "when": "editorFocus",
    },
    {
        "key": "ctrl+shift+j",
        "command": "workbench.action.splitEditorDown",
        "when": "editorFocus",
    },

    // Split Editor Terminal
    {
        "key": "ctrl+shift+h",
        "when": "terminalFocus && !panelFocus",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.action.splitEditorLeft",
                "workbench.action.createTerminalEditor"
            ]
        }
    },
    {
        "key": "ctrl+shift+j",
        "when": "terminalFocus && !panelFocus",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.action.splitEditorDown",
                "workbench.action.createTerminalEditor"
            ]
        }
    },
    {
        "key": "ctrl+shift+k",
        "when": "terminalFocus && !panelFocus",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.action.splitEditorUp",
                "workbench.action.createTerminalEditor"
            ]
        }
    },
    {
        "key": "ctrl+shift+l",
        "when": "terminalFocus && !panelFocus",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.action.splitEditorRight",
                "workbench.action.createTerminalEditor"
            ]
        }
    },


    // Trigger Suggest
    // {
    //     "key": "ctrl+space space",
    //     "command": "editor.action.triggerParameterHints",
    //     "when": "editorHasSignatureHelpProvider && editorTextFocus"
    // },
    // {
