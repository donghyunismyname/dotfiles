    // ctrl+, and ctrl+. to move between tmux windows
    {
        "key": "ctrl+,",
        "command": "-workbench.action.openSettings"
    },
    {
        "key": "ctrl+,",
        "command": "workbench.action.terminal.sendSequence",
        "args": { "text": "\u001b[44;5u" },
        "when": "terminalFocus"
    },
